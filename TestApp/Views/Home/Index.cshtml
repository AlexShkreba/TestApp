@{
    ViewData["Title"] = "Главная";
}


<table style="height: 100px;">
    <tbody>
        <tr>
            <td class="align-baseline">
                
            </td>

        </tr>
    </tbody>
</table>
<div class="container h-100 d-flex justify-content-center align-middle">
    <div>
        <div >
            <div>
                <div class="shadow-lg">
                    <a class="display-3 font-weight-normal justify-content-center">
                        <p class="text-center" style="font-family:Georgia">
                            Change Linker
                        </p>
                    </a> 
                    <form method="post" class="">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td width="300">
                                        <input class="form-control" placeholder="Your link" type="text" name="url" value="@(ViewData["local"].ToString()+ViewData["shortUrl"].ToString())" />
                                    </td>
                                    <td>
                                        <input class="form-control float-md-right" type="submit" value="Change" />
                                    </td>
                                    @{
                                        if (ViewData["shortUrl"].ToString() != "")
                                        {
                                            <td>
                                                <a class="form-control" href="@(ViewData["longUrl"])">Link</a>
                                             </td>
                                        }
                                    }                                  
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            
        </div>
    </div>
</div>